<div class="ftco-blocks-cover-1">
    <div class="site-section-cover overlay" style="background-image: url('{{trip.imageUrl}}')">
        <div class="container">
        <div class="row align-items-center justify-content-center text-center">
            <div class="col-md-7" data-aos="fade-up">
            <h1 class="mb-3 text-white">{{trip.title}}</h1>
            <p class="text-white mb-1">
                <span class="mr-2"><span class="icon-room"></span> {{trip.destination}}</span>
            </p>
            <p class="text-white">
                <span class="mr-2">
                <span class="icon-calendar"></span>
                {{formatDate trip.startDate}} – {{formatDate trip.endDate}}
                </span>
                {{#if trip.price}}
                <span class="ml-3 badge badge-primary px-3 py-2">
                    ${{trip.price}}
                </span>
                {{/if}}
            </p>

            <p class="mt-4">
                <a href="/trips" class="btn btn-outline-light py-2 px-4">Back to Trips</a>
            </p>
            </div>
        </div>
        </div>
    </div>
    </div>

    <div class="site-section">
    <div class="container">
        <div class="row">
        <div class="col-md-8 blog-content" data-aos="fade-up">
            <h2 class="mb-4">Trip Overview</h2>

            {{#if trip.notes}}
            <p>{{trip.notes}}</p>
            {{else}}
            <p>No additional notes have been added for this trip yet.</p>
            {{/if}}

            <hr>

            <h3 class="mb-3">Details</h3>
            <ul class="list-unstyled ul-check success">
            <li><strong>Destination:</strong> {{trip.destination}}</li>
            <li><strong>Start Date:</strong> {{formatDate trip.startDate}}</li>
            <li><strong>End Date:</strong> {{formatDate trip.endDate}}</li>
            {{#if trip.price}}
            <li><strong>Budget:</strong> ${{trip.price}}</li>
            {{/if}}
            </ul>
        </div>

        <!-- side bar -->
        <div class="col-md-4 sidebar" data-aos="fade-left">
            <div class="sidebar-box">
            <div class="site-section-heading">
                <h3 class="heading">Quick Info</h3>
            </div>
            <ul class="list-unstyled footer-link">
                <li class="d-block mb-2">
                <span class="d-block text-black">Destination</span>
                <span>{{trip.destination}}</span>
                </li>
                <li class="d-block mb-2">
                <span class="d-block text-black">Dates</span>
                <span>{{formatDate trip.startDate}} – {{formatDate trip.endDate}}</span>
                </li>
                {{#if trip.price}}
                <li class="d-block mb-2">
                <span class="d-block text-black">Budget</span>
                <span>${{trip.price}}</span>
                </li>
                {{/if}}
            </ul>
            </div>

            <div class="sidebar-box">
                {{!--<span class="d-block mb-2 text-muted">Edit &amp; Delete actions coming soon.</span>--}}
                <h3>Actions</h3>
                <p>
                    <a href="/trips/{{trip._id}}/edit" class="btn btn-primary btn-block mb-2">
                    Edit Trip
                    </a>
                </p>
                <form action="/trips/{{trip._id}}?_method=DELETE" method="POST"
                        onsubmit="return confirm('Are you sure you want to delete this trip?');">
                    <button type="submit" class="btn btn-outline-danger btn-block">
                    Delete Trip
                    </button>
                </form>
            </div>
        </div>
        </div>
    </div>
</div>
