<div class="ftco-blocks-cover-1">
    <div class="site-section-cover overlay" style="background-image: url('/images/hero_1.jpg')">
        <div class="container">
        <div class="row align-items-center justify-content-center text-center">
            <div class="col-md-5" data-aos="fade-up">
            <h1 class="mb-3 text-white">Trips List</h1>
            <p>Plan and manage your upcoming journeys.</p>
            </div>
        </div>
        </div>
    </div>
    </div>

    <div class="site-section">
    <div class="container">
        <div class="row justify-content-center text-center">
        <div class="col-md-7">
            <div class="heading-39101 mb-5">
            <span class="backdrop text-center">Journey</span>
            <span class="subtitle-39191">Journey</span>
            <h3>Your Trips</h3>
            </div>
        </div>
        </div>

        <div class="row">
        {{#each trips}}
        <div class="col-lg-4 col-md-6 mb-4" data-aos="fade-up">
            <div class="listing-item">
            <div class="listing-image">
                <img src="{{imageUrl}}" alt="Image" class="img-fluid">
            </div>
            <div class="listing-item-content">
                <a class="px-3 mb-3 category bg-primary" href="/trips/{{_id}}">
                ${{price}}
                </a>
                <h2 class="mb-1">
                <a href="/trips/{{_id}}">{{title}}</a>
                </h2>
            </div>
            </div>
        </div>
        {{/each}}

        {{!-- when trips are empty --}}
        {{#unless trips.length}}
        <div class="col-12 text-center">
            <p>You don&apos;t have any trips yet.</p>
            <a href="/trips/new" class="btn btn-primary">Create your first trip</a>
        </div>
        {{/unless}}
        </div>
    </div>
</div>
