<div class="site-section">
    <div class="container">
        <div class="row">
        <div class="col-md-8 mb-5" data-aos="fade-up">

            <h2 class="mb-4">Edit Trip</h2>

            <form action="/trips/{{trip._id}}?_method=PUT" method="POST" enctype="multipart/form-data">

                <div class="form-group">
                    <label for="title">Trip Title</label>
                    <input type="text" id="title" name="title" class="form-control"
                        value="{{trip.title}}" required>
                </div>

                <div class="form-group">
                    <label for="destination">Destination</label>
                    <input type="text" id="destination" name="destination" class="form-control"
                        value="{{trip.destination}}" required>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-6">
                    <label for="startDate">Start Date</label>
                    <input type="date" id="startDate" name="startDate" class="form-control"
                            value="{{formatDate trip.startDate}}">
                    </div>
                    <div class="form-group col-md-6">
                    <label for="endDate">End Date</label>
                    <input type="date" id="endDate" name="endDate" class="form-control"
                            value="{{formatDate trip.endDate}}">
                    </div>
                </div>

                <div class="form-group">
                    <label for="price">Budget (USD)</label>
                    <input type="number" id="price" name="price" class="form-control"
                        value="{{trip.price}}" min="0" step="1">
                </div>

                <div class="form-group">
                    <label for="image">Image</label>
                    <input type="file" id="image" name="image" class="form-control">
                    {{#if trip.imageUrl}}
                    <small class="form-text text-muted">
                        Current: <a href="{{trip.imageUrl}}" target="_blank">{{trip.imageUrl}}</a>
                    </small>
                    {{/if}}
                </div>

                <div class="form-group">
                    <label for="notes">Notes</label>
                    <textarea id="notes" name="notes" rows="5" class="form-control">{{trip.notes}}</textarea>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary py-2 px-4">Save Changes</button>
                    <a href="/trips/{{trip._id}}" class="btn btn-secondary ml-2">Cancel</a>
                </div>
            </form>

        </div>
        </div>
    </div>
</div>
